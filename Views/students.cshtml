@{
  Layout = "Shared/_Layout.cshtml";
}

@if(Model.Count == 0)
{
  <h4>There are no students in this university!</h4>
}
else
{
  @foreach(var student in @Model)
  {
    <h4><a href="/students/@student.GetId()">@student.GetName()</a></h4>
  }

}

<p><a href="/students/new">Click to add new student</a></p>
<p><a href="/">Click here to go back </a></p>

@if(Model.Count != 0)
{
  <form action="/students" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-danger button-hover btn-sm">Delete all students</button>
  </form>
}
