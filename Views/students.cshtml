@{
  Layout = "Shared/_Layout.cshtml";
}

@if(Model.Count == 0)
{
  <h4>There are no students in this university!</h4>
}
else
{
  @foreach(var student in @Model)
  {
    <h4><a href="/students/@student.GetId()">@student.GetName()</a></h4>
  }

}

<p>
  <a href="/students/new">Click to add new student</a>
</p>

<p>
  <a href="/">Click here to go back </a>
</p>
