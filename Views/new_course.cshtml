@{
  Layout = "Shared/_Layout.cshtml";
}

<form action="/courses" method="post">
  <div class="form-group">
    <label for="course-name">What is the course's name?</label>
    <input type="text" name="course-name" class="form-control">
  </div>
  <div class="form-group">
    <label for="course-number">What is the course number?</label>
    <input type="text" name="course-number" class = "form-control">
  </div>
  <button type="submit" class="btn button-hover">Add course</button>
</form>
