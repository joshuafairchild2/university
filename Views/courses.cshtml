@{
  Layout = "Shared/_Layout.cshtml";
}

<form action="/courses/results">
  <label for="search">Search for a class</label>
  <input type="text" name="search">
  <button type="submit" name="button">Submit</button>

</form>

@if(Model.Count == 0)
{
  <h4>There are no courses in this university!</h4>
}
else
{
  @foreach(var course in @Model)
  {
    <p>
      <h4><a href="/courses/@course.GetId()">@course.GetName()</a></h4>
      @course.GetCourseNumber()
    </p>

  }

}
<p><a href="/courses/new">Click to add a new course</a></p>
<p><a href="/">Click here to go back </a></p>

@if(Model.Count != 0)
{
  <form action="/courses" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-danger button-hover btn-sm">Delete all courses</button>
  </form>
}
